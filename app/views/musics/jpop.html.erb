<h1>J-POP</h1>

<h3>投稿を検索</h3>
 <%= form_tag({controller:"musics",action:"jpop"}, method: :get) do %>
   <%= text_field_tag :search %>
   <%= submit_tag '検索する'  %>
<% end %>

<% if user_signed_in? %>
  <%= link_to "マイページへ", user_path(current_user.id) %>
<% end %>

<% @musics.each do |t| %>
  <% if t.category == "jpop" %>  
  <p>アーティスト名:<%= t.content %></p>
   <%= image_tag t.image_url, size: "250x200" if t.image? %>
    <%= link_to "曲名一覧ページへ", artist_songs_path(id: t.id) %>
     <%= button_to "削除する", music_path(t.id), method: :delete %>
     

  <% end %>
<% end %>